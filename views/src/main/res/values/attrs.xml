<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ToggleImageButton">
        <attr name="selectedColor" format="color" />
        <attr name="unselectedColor" format="color" />
        <attr name="checked" format="boolean" />
        <attr name="unselectedBackground" format="reference" />
        <attr name="selectedBackground" format="reference" />
    </declare-styleable>

    <declare-styleable name="DotView">
        <attr name="color" format="color" />
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="UniformBaseLayout">
        <attr name="contentMargin" format="dimension" />
        <attr name="forceDrawBackground" format="boolean" />
    </declare-styleable>

</resources>