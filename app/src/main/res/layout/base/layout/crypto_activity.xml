<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test of AES / GCM" />

        <EditText
            android:id="@+id/crypto_activity_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="your stuff to encrypt" />

        <Button
            android:id="@+id/crypto_activity_tryit"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="try out." />

        <TextView
            android:text="Encrypted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/crypto_activity_encrypted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="decrypted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/crypto_activity_decrypted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</layout>