<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/widgets_recycler_example_add_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add 1000 elements in 0 section" />

        <Button
            android:id="@+id/widgets_recycler_example_add_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add 100 elements 10 in each section" />

        <Button
            android:id="@+id/widgets_recycler_example_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hide section 5,10,15" />

        <Button
            android:id="@+id/widgets_recycler_example_try_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="try out automatic" />

        <Button
            android:id="@+id/widgets_recycler_example_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="clear" />

        <com.commonsense.android.kotlin.views.widgets.SwipeRefreshRecyclerView
            android:id="@+id/widgets_recycler_example_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>