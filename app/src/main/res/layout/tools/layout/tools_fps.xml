<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/tools_fps_start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start showing fps in textview" />

        <TextView
            android:id="@+id/tools_fps_inline_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/tools_fps_start_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show as notification" />

        <Button
            android:id="@+id/tools_fps_start_inline_graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show as inline graph" />

        <Button
            android:id="@+id/tools_fps_stop_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop all" />

        <Button
            android:id="@+id/tools_fps_stall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stall UI thread for 100 msec" />


        <Switch
            android:id="@+id/tools_fps_stall_random"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stall UI thread randomly" />


    </LinearLayout>
</layout>