<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/simple_swipe_item_solve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#11f"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text="Good action"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/simple_swipe_item_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#a22"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/simple_swipe_item_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:text="fire missiles!"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/simple_swipe_item_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#555"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Magic content ! - choose a side"
                android:textColor="@color/white" />
        </LinearLayout>


    </FrameLayout>
</layout>