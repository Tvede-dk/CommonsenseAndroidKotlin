<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="user"
            type="csense.android.exampleApp.models.UserViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/user_edit_view_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="String"
            android:text="@={user.Username}"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/user_edit_view_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="String"
            android:text="@={user.password}"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/user_edit_view_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="String"
            android:text="@={user.email}"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/user_edit_view_realname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="String"
            android:text="@={user.realName}"
            android:textColor="@color/black" />

    </LinearLayout>

</layout>