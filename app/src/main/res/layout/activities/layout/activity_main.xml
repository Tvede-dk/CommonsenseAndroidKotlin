<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="title" />


        <Button
            android:id="@+id/activity_main_basic_recycler_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simple recycler view demo" />

        <Button
            android:id="@+id/activity_main_advance_recycler_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="advanced recycler view demo" />

        <Button
            android:id="@+id/activity_main_advance_recycler_demo_fast_scroller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="advanced recycler view demo" />


        <Button
            android:id="@+id/activity_main_advance_async_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="advanced Async button (please spam)" />

    </LinearLayout>
</layout>